<% layout('layouts/boilerplate') -%>
<div class="singup mt-3">
    <h1 class="head mb-5">
        Login on 
        <span class="new-head">
            airbnb
        </span>     
    </h1>
    <div class="form-control-lg new-listing login-form">
        <form action="/login" method="POST" class="needs-validation" novalidate >
            <div>
                <div class="mb-3 edit-div">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="username" class="form-control" required>
                </div>
                <div class="mb-3 edit-div">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
            </div>    
            <button class="btn btn-danger mt-2">Login</button>
        </form>
    </div>
</div>